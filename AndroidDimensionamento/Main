package com.example.myapplication;


import android.content.Intent;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.os.Bundle;
import android.provider.MediaStore;
import android.view.MotionEvent;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ImageView;
import android.widget.TextView;
import androidx.annotation.Nullable;
import androidx.appcompat.app.AppCompatActivity;

public class MainActivity extends AppCompatActivity {

    private static final int REQUEST_IMAGE_CAPTURE = 1;
    private ImageView imageView;
    private EditText larguraInput, alturaInput;
    private TextView realCoordinates;
    private Bitmap bitmap;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        imageView = findViewById(R.id.imageView);
        larguraInput = findViewById(R.id.widthInput);
        alturaInput = findViewById(R.id.heightInput);
        realCoordinates = findViewById(R.id.realCoordinates);
        Button captureButton = findViewById(R.id.captureButton);

        captureButton.setOnClickListener(v -> captureImage());

        imageView.setOnTouchListener(new View.OnTouchListener() {
            @Override
            public boolean onTouch(View view, MotionEvent event) {
                if (event.getAction() == MotionEvent.ACTION_DOWN && bitmap != null) {
                    float x = event.getX();
                    float y = event.getY();
                    calculateRealCoordinates(x, y);
                    view.performClick(); // Importante para acessibilidade
                    return true;
                }
                return false;
            }
        });
    }

    private void captureImage() {
        Intent it = new Intent(MediaStore.ACTION_IMAGE_CAPTURE);
        startActivityForResult(it, REQUEST_IMAGE_CAPTURE);

    }

    @Override
    protected void onActivityResult(int requestCode, int resultCode, @Nullable Intent data) {
        super.onActivityResult(requestCode, resultCode, data);
        if (requestCode == REQUEST_IMAGE_CAPTURE && resultCode == RESULT_OK) {
            Bundle extras = data.getExtras();
            bitmap = (Bitmap) extras.get("data");
            imageView.setImageBitmap(bitmap);

        }
    }

    // Calcula as coordenadas reais com base nas dimensões inseridas e no toque do usuário

    private void calculateRealCoordinates(float x, float y) {
        String larguraReal = larguraInput.getText().toString();
        String alturaReal = alturaInput.getText().toString();

        if (larguraReal.isEmpty() || alturaReal.isEmpty()) {
            realCoordinates.setText("Insira as dimensões reais da imagem.");
            return;
        }

        float larguraRealfloat = Float.parseFloat(larguraReal);
        float alturaRealfloat = Float.parseFloat(alturaReal);

        int imageViewLargura = imageView.getWidth();
        int imageViewAltura= imageView.getHeight();
        int bitmapLargura = bitmap.getWidth();
        int bitmapAltura = bitmap.getHeight();

        float scaleX = (float) bitmapLargura / imageViewLargura;
        float scaleY = (float) bitmapAltura / imageViewAltura;

        float bitmapX = x * scaleX;
        float bitmapY = y * scaleY;

        float realX = (bitmapX / bitmapLargura) * larguraRealfloat;
        float realY = (bitmapY / bitmapAltura) * alturaRealfloat;

        realCoordinates.setText(String.format("Coordenadas reais: (%.2f cm, %.2f cm)", realX, realY));
    }
}
