<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Definir a cor de fundo e a borda -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Definir a cor de fundo (opcional) -->
            <solid android:color="#FFFFFF" /> <!-- Cor de fundo branco -->

            <!-- Definir a borda -->
            <stroke
                android:width="1dp"
                android:color="@color/cinza" /> <!-- Cor da borda (vermelha neste exemplo) -->

            <!-- Definir o raio dos cantos (opcional) -->
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/icon_arrow_down"
        android:right="15dp"
        android:gravity="right|center_vertical"></item>
</layer-list>